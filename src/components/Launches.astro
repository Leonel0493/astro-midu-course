---
// aqui se pude ejecutar el javascript que deseemos
import { type APISpaceXResponse } from "../types/api";
import CardLaunch from "./CardLaunch.astro";

const res = await fetch("https://api.spacexdata.com/v5/launches/query", {
  method: "POST",
  headers: {
    "Content-Type": "application/json",
  },
  body: JSON.stringify({
    query: {},
    options: {
      sort: {
        date_unix: "asc",
      },
      limit: 12,
    },
  }),
});

const { docs: lanunches } = (await res.json()) as APISpaceXResponse;
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    lanunches.map((launch) => (
      <CardLaunch
        id={launch.id}
        img={launch.links.patch.small}
        flightNumber={launch.flight_number}
        details={launch.details}
        success={launch.success}
      />
    ))
  }
</div>
